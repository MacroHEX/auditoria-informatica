{
  "name": "sistema-agendamiento-tickets",
  "version": "1.0.0",
  "description": "Sistema de agendamiento de tickets para banco - Monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "concurrently \"cd packages/backend && pnpm dev\" \"cd packages/frontend && pnpm dev\"",
    "dev:backend": "cd packages/backend && pnpm dev",
    "dev:frontend": "cd packages/frontend && pnpm dev",
    "build": "concurrently \"cd packages/backend && pnpm build\" \"cd packages/frontend && pnpm build\"",
    "start": "concurrently \"cd packages/backend && pnpm start\" \"cd packages/frontend && pnpm start\"",
    "db:generate": "cd packages/backend && pnpm db:generate",
    "db:migrate": "cd packages/backend && pnpm db:migrate",
    "db:studio": "cd packages/backend && pnpm db:studio",
    "db:seed": "cd packages/backend && pnpm db:seed",
    "db:reset": "cd packages/backend && pnpm db:reset",
    "clean": "rm -rf node_modules packages/backend/node_modules packages/frontend/node_modules",
    "install:all": "pnpm install"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "@mantine/core": "^8.3.7",
    "@mantine/hooks": "^8.3.7",
    "@mantine/notifications": "^8.3.7",
    "@tabler/icons-react": "^3.35.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^5.22.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2"
  },
  "keywords": [
    "tickets",
    "banco",
    "socket.io",
    "react",
    "auditoria",
    "monorepo"
  ],
  "author": "Martin Medina",
  "license": "MIT"
}